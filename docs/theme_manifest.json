  },
  "playerConfig": {
    "progressColor": {"type": "color", "optional": true},
    "progressBackgroundColor": {"type": "color", "optional": true}
  },
  "theme_info": {
    "title": {"type": "string", "optional": true, "description": "Theme display name"},
    "author": {"type": "string", "optional": true, "description": "Theme creator's name"},
    "authorUrl": {"type": "string", "optional": true, "description": "Author's website or profile URL"},
    "description": {"type": "string", "optional": true, "description": "Theme description/purpose"}
  }
}
