    "brightness": {"type": "path", "optional": true},
    "displayBatteryOn": {"type": "path", "optional": true},
    "displayBatteryOff": {"type": "path", "optional": true},
    "dateTime": {"type": "path", "optional": true},
    "language": {"type": "path", "optional": true},
    "launcher": {"type": "path", "optional": true},
    "factoryReset": {"type": "path", "optional": true},
    "clearCache": {"type": "path", "optional": true},
    "theme": {"type": "path", "optional": true},
    "fileExtensionOn": {"type": "path", "optional": true},
    "fileExtensionOff": {"type": "path", "optional": true}
  },
  "statusConfig": {
    "playing": {"type": "path", "optional": true},
    "audiobookPlaying": {"type": "path", "optional": true},
    "pause": {"type": "path", "optional": true},
    "fmPlaying": {"type": "path", "optional": true},
    "stop": {"type": "path", "optional": true},
    "blConnected": {"type": "path", "optional": true},
    "blConnecting": {"type": "path", "optional": true},
    "blDisconnected": {"type": "path", "optional": true},
