{
  "schemaVersion": "1.0",
  "app": "com.innioasis.y1",
  "themeRoot": "/storage/sdcard0/Themes",
  "configFile": "config.json",
  "notes": [
    "A theme is a folder under themeRoot that contains config.json and the referenced assets.",
    "All file paths are relative to the theme folder.",
    "Empty or missing string values fall back to built-in resources.",
    "Color strings are parsed with Android Color.parseColor; invalid colors are ignored.",
    "battery and batteryCharging should provide 4 images (levels)."
  ],
  "valueTypes": {
    "path": "Relative file path under theme folder (typically .png)",
    "color": "#RRGGBB or #AARRGGBB",
    "font": "Relative font file path (ttf/otf)",
    "list(path)": "JSON array of relative file paths"
  },
  "themeConfig": {
    "theme_info": {"type": "object", "optional": true, "description": "Theme metadata including title, author, and description"},
    "themeCover": {"type": "path", "optional": true, "description": "Theme preview image used in theme list"},
    "desktopWallpaper": {"type": "path", "optional": true, "description": "Desktop wallpaper"},
    "globalWallpaper": {"type": "path", "optional": true, "description": "Global wallpaper"},
    "desktopMask": {"type": "path", "optional": true, "description": "Desktop overlay mask"},
    "fontFamily": {"type": "font", "optional": true, "description": "Font file used to override monospace system font"},
    "itemConfig": {"type": "object", "optional": true, "description": "List item styling"},
    "dialogConfig": {"type": "object", "optional": true, "description": "Dialog styling"},
    "menuConfig": {"type": "object", "optional": true, "description": "Menu styling"},
    "homePageConfig": {"type": "object", "optional": true, "description": "Home screen icon set"},
    "fileConfig": {"type": "object", "optional": true, "description": "File list icons"},
    "settingConfig": {"type": "object", "optional": true, "description": "Settings screen icons"},
    "statusConfig": {"type": "object", "optional": true, "description": "Status bar icons"},
    "playerConfig": {"type": "object", "optional": true, "description": "Player progress colors"}
  },
  "itemConfig": {
    "itemTextColor": {"type": "color", "optional": true},
    "itemSelectedTextColor": {"type": "color", "optional": true},
    "itemBackground": {"type": "path", "optional": true},
    "itemSelectedBackground": {"type": "path", "optional": true},
    "itemRightArrow": {"type": "path", "optional": true}
  },
  "dialogConfig": {
    "dialogOptionBackground": {"type": "path", "optional": true},
    "dialogOptionTextColor": {"type": "color", "optional": true},
    "dialogOptionSelectedBackground": {"type": "path", "optional": true},
    "dialogOptionSelectedTextColor": {"type": "color", "optional": true},
    "dialogBackgroundColor": {"type": "color", "optional": true},
    "dialogTextColor": {"type": "color", "optional": true}
  },
  "menuConfig": {
    "menuBackgroundColor": {"type": "color", "optional": true},
    "menuItemBackground": {"type": "path", "optional": true},
    "menuItemTextColor": {"type": "color", "optional": true},
    "menuItemSelectedBackground": {"type": "path", "optional": true},
    "menuItemSelectedTextColor": {"type": "color", "optional": true}
  },
  "homePageConfig": {
    "nowPlaying": {"type": "path", "optional": true},
    "music": {"type": "path", "optional": true},
    "video": {"type": "path", "optional": true},
    "audiobooks": {"type": "path", "optional": true},
    "photos": {"type": "path", "optional": true},
    "fm": {"type": "path", "optional": true},
    "bluetooth": {"type": "path", "optional": true},
    "settings": {"type": "path", "optional": true},
    "shuffleQuick": {"type": "path", "optional": true},
    "ebook": {"type": "path", "optional": true},
    "calculator": {"type": "path", "optional": true},
    "calendar": {"type": "path", "optional": true}
  },
  "fileConfig": {
    "folderIcon": {"type": "path", "optional": true},
    "musicIcon": {"type": "path", "optional": true}
  },
  "settingConfig": {
    "settingMask": {"type": "path", "optional": true},
